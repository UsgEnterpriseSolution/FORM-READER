{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*.ts", "src/myTypes.ts"],
  "exclude": ["node_modules", "src/archive"]
}
